{
  "services": {
    "backend": {
      "port": 8002,
      "host": "0.0.0.0",
      "reload": true,
      "app": "app.main:app"
    },
    "frontend": {
      "port": 5173,
      "host": "0.0.0.0"
    },
    "mongodb": {
      "url": "mongodb://localhost:27017",
      "database": "recommender",
      "fallback": "embedded"
    }
  },
  "environment": {
    "DEBUG": true,
    "CORS_ORIGINS": "http://localhost:3000,http://localhost:5173",
    "JWT_SECRET_KEY": "dev-secret-key-change-in-production",
    "ALGORITHM": "HS256",
    "ACCESS_TOKEN_EXPIRE_MINUTES": 30
  },
  "paths": {
    "backend": "./backend",
    "frontend": "./frontend",
    "venv": "./backend/venv"
  }
}